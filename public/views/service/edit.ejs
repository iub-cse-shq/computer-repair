      <div class="header">
      <div class="container-fluid dff">
        <div class="row">
          <div class="col-lg-4">
             <img src="/image/cr.jpg"style="height:300px;width:100%;">
          </div>
          <div class="col-lg-6">
             <div class="container">
                <table width="700px">
                  <tr style="margin-top: 2px;">
                    
                  <tr>
                    <td>
                      <label type="text" style="font-size:25px;">Service:</label>
                    </td>
                    <td>
                       <input id="name"type="text" placeholder="Enter service name"
                       style="height:30px;width:300px;font-size:18px;padding-left:10px;margin-right:500px;" value=<%=request.service.name%>>
                    </td>
                  </tr>
                  
                    <tr>
                    <td>
                        <label type="text" style="font-size:30px;">Image:</label>
                    </td>
                    <td>
                       <input id="im"type="text" placeholder="Give image url"style="height:30px;width:300px;font-size:18px;padding-left:10px;margin-right:500px;" 
                    value=<%=request.service.im%>>
                       <h5 id="id4" style="color:red"></h5> 
                    </td>
                  </tr>
                  
                   <tr>
                    <td>
                        <label type="text" style="font-size:30px;">price:</label>
                    </td>
                    <td>
                       <input id="price"type="text" placeholder="price"style="height:30px;width:300px;font-size:18px;padding-left:10px;margin-right:500px;" 
                    value=<%=request.service.price%>>
                       <h5 id="id4" style="color:red"></h5> 
                    </td>
                  </tr>
                  
                    <tr>
                    <td>
                       <label type="text" style="font-size:25px;margin-bottom:300px;" >Description:</label><br>
                    </td>
                    <td>
                       <textarea id="description" type="text"placeholder="write Something.." 
                       style="height:300px;width:300px;font-size:18px;padding-left:8px;margin-right:500px;margin-top:20px;" ><%=request.service.description%></textarea>
                    </td>
                  </tr>
                  
                </table>
               <button id="submit">submit</button>
               <script src="/lib/jquery/dist/jquery.min.js"></script>
               <script>
               var service={};
               
            var serviceID=<%- JSON.stringify(request.service._id)%>;
            
               
             $("#name").change(function(){
                service.name=$("#name").val();
            });
             $("#description").change(function(){
                service.description=$("#description").val();
            });
             $("#price").change(function(){
                service.price=$("#price").val();
            });
            
            $("#im").change(function(){
                service.im=$("#im").val();
            });
            
             $("#submit").click(function(){
                 console.log(service);
              $.ajax({
                  method:"PUT",
                  url:"/api/services/edit/"+serviceID,
                  data:service
              }).done(function(response){
                  console.log(response);
                  window.location.replace("/service");
              }).fail(function(response){
                // $("#id4").text(JSON.parse(response.responseText).message);
                  console.log(response.responseText);
              });
            });
            
       $("#sin").click(function(event){
                    $.ajax({
                    method: 'GET',
                    url: "/auth/signout",
                    
                   }).done(function(response){
                     console.log(response);
                    window.location.replace('/home');
                   }).fail(function(response){
                     
                   });
             });
            
                </script>
      
